{
 	"display": "Default",
    "compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "dist",
		"sourceMap": true,
		"esModuleInterop": true,
		"removeComments": true, 
		"strict": true, 
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false,
	},
    "exclude": ["node_modules"],
	"include": ["src/**/*.ts"]
}